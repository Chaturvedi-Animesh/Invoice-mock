        <script><![CDATA[function onSubmit() {
    var attachmentID = g_form.getValue('upload_a_file');
    if (!attachmentID) {
        g_form.addErrorMessage("Please attach a file.");
        return false;
    }

    var ga = new GlideAjax('x_1097202_invoices.CreateInvoice');
    ga.addParam('sysparm_name', 'validateExcelValues');
    ga.addParam('sysparm_attachmentID', attachmentID);

    // Make synchronous GlideAjax call
    var response = ga.getXMLWait(); // Waits for the server response
    var isValid = response.getAnswer(); // Get the server's answer

    if (isValid === "false") {
        g_form.addErrorMessage("Invalid Excel Data");
        return false;
    }

    return true; // Allow form submission if valid
}
]]></script>
